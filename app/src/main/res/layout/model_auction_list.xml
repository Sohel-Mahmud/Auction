<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/auctionlistCardView"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/auctionImage"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/screenshot"
            android:layout_weight="4"
            android:layout_width="200dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_weight="8"
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/auctionTitle"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="An awesome item with bala sadfjsdfsd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/auctionPostTime"
                    android:textStyle="italic"
                    android:textSize="10sp"
                    android:text="post date: 21/07/2010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/auctionRemainingTime"
                    android:textSize="15sp"
                    android:layout_gravity="start"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/auctionCurrentPrice"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="end"
                    android:text="à§³"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:weightSum="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/auctionNumBids"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/holo_red_light"
                    android:textAlignment="center"
                    android:text="Bids"
                    android:textColor="#ffff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="right"
                    android:background="@drawable/auction_going"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/auctionStatus"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/holo_blue_light"
                    android:layout_marginRight="5dp"
                    android:textAlignment="viewStart"
                    android:paddingRight="5dp"
                    android:paddingLeft="2dp"
                    android:text="On going"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>