<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="15dp"
                android:textSize="25sp"
                android:id="@+id/signuptext"
                android:text="Sign up"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:layout_below="@+id/signuptext"
                android:id="@+id/hellootext"
                android:text="Already have an account?     "
                android:textColor="#A9A9A9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_below="@+id/signuptext"
                android:layout_toRightOf="@id/hellootext"
                android:id="@+id/login_txt_btn"
                android:text="@string/login"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/reg_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/login_txt_btn"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/colorAccent"
                        android:textColorHint="#ffff"
                        android:textCursorDrawable="@color/colorAccent"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/register_username"
                        android:drawableLeft="@drawable/ic_username"
                        android:layout_width="match_parent"
                        android:hint=" Name"
                        android:inputType="text"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:keyboardNavigationCluster="true"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/colorAccent"
                        android:textColorHint="#ffff"
                        android:textCursorDrawable="@color/colorAccent"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/register_address"
                        android:drawableLeft="@drawable/ic_address"
                        android:layout_width="match_parent"
                        android:hint=" Address"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/colorAccent"
                        android:textColorHint="#ffff"
                        android:textCursorDrawable="@color/colorAccent"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/register_phone"
                        android:drawableLeft="@drawable/ic_phone"
                        android:layout_width="match_parent"
                        android:hint=" Phone Number"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:keyboardNavigationCluster="true"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/colorAccent"
                        android:textColorHint="#ffff"
                        android:textCursorDrawable="@color/colorAccent"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/register_email"
                        android:drawableLeft="@drawable/ic_email"
                        android:layout_width="match_parent"
                        android:hint=" Email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:keyboardNavigationCluster="true"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/colorAccent"
                        android:textColorHint="#ffff"
                        android:textCursorDrawable="@color/colorAccent"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/register_confirm_pass"
                        android:drawableLeft="@drawable/ic_password"
                        android:layout_width="match_parent"
                        android:hint=" Password"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:textSize="17sp"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#ffff"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="@color/colorAccent"
                        android:textColorHint="#ffff"
                        android:textCursorDrawable="@color/colorAccent"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/register_password"
                        android:drawableLeft="@drawable/ic_password"
                        android:layout_width="match_parent"
                        android:hint=" Confirm Password"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:textSize="17sp"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/register_button"
                    android:text="Register"
                    android:textColor="#ffff"
                    android:padding="8dp"
                    android:background="@android:color/holo_red_light"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="180dp"
                    android:layout_height="40dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>